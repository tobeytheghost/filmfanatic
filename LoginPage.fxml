<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
    <Label text="Login" style="-fx-font-size: 24px;" />
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="Username:" />
        <TextField fx:id="usernameField" promptText="Enter username" GridPane.columnIndex="1" />
        <Label text="Password:" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button text="Login" onAction="#handleLogin" GridPane.columnSpan="2" GridPane.rowIndex="2" />
    </GridPane>
    <GridPane fx:id="loginGridPane" alignment="CENTER" hgap="10" vgap="10">
    <!-- Other components -->
</GridPane>
    <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
</VBox>
